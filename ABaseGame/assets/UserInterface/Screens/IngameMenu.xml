<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    
    <useStyles filename="de/agame/nifty/button/agame-button-styles.xml" />
    <useControls filename="de/agame/nifty/button/agame-button.xml" />
    
    <screen id="pause">
        <layer id="maincontainer" backgroundColor="#0000" childLayout="vertical">
            <panel id="upperpanel" height="33%" width="100%" align="center" childLayout="center" backgroundColor="#0000">
                <control name="button" id="play" font="UserInterface/fonts/Content.fnt" label="Return To Game" width="50%" height="70%" align="center" valign="center"/>
            </panel>
            
            <panel id="middlepanel" height="33%" width="100%" align="center" childLayout="center" backgroundColor="#0000">
                <control name="button" id="settings" font="UserInterface/fonts/Content.fnt" label="Settings" width="50%" height="70%" align="center" valign="center"/>
            </panel>
            
            <panel id="lowerpanel" height="33%" width="100%" align="center" childLayout="center" backgroundColor="#0000">
                <control name="button" id="title" font="UserInterface/fonts/Content.fnt" label="Return To Title" width="50%" height="70%" align="center" valign="center"/>
            </panel>
        </layer>
    </screen>
</nifty>
